{
  "name": "garden",
  "description": "A full-featured development framework for containers and serverless",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garden-io/garden.git"
  },
  "author": "Garden Technologies, Inc. <info@garden.io>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/garden-io/garden",
  "engines": {
    "npm": ">=5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@lerna/version": "^3.6.0",
    "@types/bluebird": "^3.5.25",
    "@types/execa": "^0.9.0",
    "@types/fs-extra": "^5.0.4",
    "@types/handlebars": "^4.0.39",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.15",
    "axios": "^0.18.0",
    "fs-extra": "^7.0.1",
    "gulp": "^4.0.0",
    "gulp-cached": "^1.1.1",
    "gulp-license-check": "^1.2.1",
    "handlebars": "^4.0.12",
    "husky": "^1.2.1",
    "lerna": "^3.6.0",
    "lodash": "^4.17.11",
    "markdown-link-check": "^3.7.2",
    "shx": "^0.3.2",
    "snyk": "^1.117.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "tslint-no-unused": "^0.2.0-alpha.1",
    "typescript": "^3.2.2",
    "typescript-formatter": "^7.2.2"
  },
  "scripts": {
    "build": "npm run clean && gulp build",
    "check-docs": "./bin/check-docs",
    "check-licenses": "gulp check-licenses",
    "check-package-lock": "git diff --quiet HEAD -- package-lock.json || (echo 'package-lock.json is dirty!' && exit 1)",
    "clean": "lerna run clean && git clean -X -f",
    "dist": "gulp dist",
    "fix-format": "tslint -p . --fix && tsfmt -r",
    "generate-docs": "gulp generate-docs",
    "integ": "lerna run integ",
    "lint": "tslint -p . && tsfmt --verify && gulp check-licenses",
    "prepublishOnly": "npm run dist",
    "preversion": "npm test",
    "release": "./bin/publish",
    "release-canary": "./bin/publish-canary",
    "test": "gulp test",
    "build-service-ci": "gulp garden-service:build-ci",
    "test-service-ci": "gulp garden-service:mocha",
    "build-dashboard": "gulp garden-dashboard:build",
    "build-dashboard-ci": "gulp garden-dashboard:build-ci"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run check-package-lock && npm run lint && npm test && npm run integ"
    }
  },
  "snyk": true,
  "dependencies": {
    "indent-string": "^3.2.0"
  }
}
